@charset "utf-8"
/* ===================================================================

 playerList.css

======================================================================*/

@import "../../../_partial/var/_settings"

/*----------------------------------------------------------
 base
------------------------------------------------------------*/

.playerList
  background: #f3f6ff


/*----------------------------------------------------------
 playerList-refinePanel
------------------------------------------------------------*/

.refinePanel
  position: relative
  margin: 0 10px
  padding: 10px 0 5px
  background: #fff
  border: 2px solid #ddd
  border-radius: 5px
  font-size: 12px


/* refinePanel-header
--------------------------------------------------*/

.refinePanel-header
  padding: 0 7px
  color: #666
  overflow: hidden

.refinePanel-header-title
  margin-bottom: 10px
  padding: 3px 90px 10px 5px
  border-bottom: 1px dotted #eee
  font-weight: bold

.refinePanel-header-info
  padding-left: 5px
  overflow: hidden
  dt
    clear: left
    float: left
    margin-bottom: 5px
    font-weight: bold
    &:after
      content: "ï¼š"
  dd
    margin-bottom: 5px
    overflow: hidden


.refinePanel-header-info-list
  li
    display: inline-block
    &:after
      content: "/"
      margin-left: 5px
    &:last-child:after
      content: ""

.refinePanel-header-btnSetting
  position: absolute
  top: 8px
  right: 7px


/* refinePanel-set
--------------------------------------------------*/

.refinePanel-set-category
  dt
    padding: 8px 10px
    background: #eee
    font-weight: bold

.refinePanel-set-category-list
  li
    border-bottom: 1px solid #eee
    label
      display: block
      padding: 10px
    input
      margin: 0 7px 2px 0

.refinePanel-set-btnArea
  padding: 20px 0 15px
  text-align: center


/*----------------------------------------------------------
 playerList-control
------------------------------------------------------------*/

/* playerList-control-sortListTab
--------------------------------------------------*/

.playerList-control-sortListTab-list
  display: flex
  border-bottom: 1px solid #ccc
  li
    width: 20%
    padding: 15px 5px 10px
    border-bottom: 3px solid transparent
    box-sizing: border-box
    font-size: 10px
    color: #777
    text-align: center
    cursor: pointer
    &.active
      border-color: #ffa61a
      color: #fa9c09
      font-weight: bold
      cursor: default


/* playerList-control-listInfo
--------------------------------------------------*/

.playerList-control-listInfo
  padding: 10px
  background: #fff

.playerList-control-listInfo-number
  font-size: 12px


/*----------------------------------------------------------
 playerList-area
------------------------------------------------------------*/

.playerList-area-list
  background: #fff
  border-bottom: 1px solid #ccc


/*----------------------------------------------------------
 playerCassette
------------------------------------------------------------*/

.playerCassette
  border-top: 1px solid #ddd
  a
    display: block
    position: relative
    padding: 10px 25px 15px 10px
    color: #444
    text-decoration: none
    overflow: hidden
    &a:after
      content: ""
      display: block
      position: absolute
      top: 50%
      right: 10px
      width: 10px
      height: 10px
      margin-top: -7px
      border-top: 3px solid #ccc
      border-right: 3px solid #ccc
      transform: rotate(45deg)


/* playerCassette-name
--------------------------------------------------*/

.playerCassette-name
  margin-bottom: 5px
  font-size: 14px
  color: #039
  small
    margin-left: 10px
    font-size: 10px
    font-weight: normal


/* playerCassette-thumb
--------------------------------------------------*/

.playerCassette-thumb
  float: left
  margin-right: 10px


/* playerCassette-data
--------------------------------------------------*/

.playerCassette-data
  overflow: hidden

.playerCassette-data-prof
  font-size: 12px
  li
    display: inline-block
    margin-right: 2px
    &:before
      content: "/"
      margin-right: 7px
      font-size: 12px
      font-weight: normal
    &:first-child:before
      content: none

&.playerCassette-data-prof-position
  font-size: 14px
  font-weight: bold
  span
    margin-left: 3px
    font-size: 12px
    font-weight: normal
  &.playerCassette-data-prof-team
    display: none
  &.playerCassette-data-prof-handed
  &.playerCassette-data-prof-birthday
    display: none
  &.playerCassette-data-prof-carrier
    display: none

.playerCassette-data-param
  margin-top: 5px
  overflow: hidden
  li
    float: left
    margin: 5px 15px 0 0
    font-size: 10px

.playerCassette-data-param-speed
  span
    margin-right: 5px
    font-size: 14px

.playerCassette-data-param-control
  clear: left

.playerCassette-data-param
  [class*="icon-param"]
    margin-left: 5px


/*----------------------------------------------------------
 playerList-pager
------------------------------------------------------------*/

.playerList-pager
  padding: 20px 0
  text-align: center

.playerList-pager-btnStart,
.playerList-pager-btnPrev,
.playerList-pager-btnNext,
.playerList-pager-btnLast
  display: inline-block
  margin: 0 5px
  vertical-align: middle
  font-size: 14px
  color: #aaa

.playerList-pager-btnStart.disabled,
.playerList-pager-btnPrev.disabled,
.playerList-pager-btnNext.disabled,
.playerList-pager-btnLast.disabled
  color: #eee

.playerList-pager-btnStart
  display: none
.playerList-pager-btnLast
  display: none

.playerList-pager-list
  display: inline-block
  li
    display: inline-block
    width: 30px
    margin: 0 3px
    padding: 7px 2px
    background: #fff
    border: 1px solid #cecece
    border-radius: 3px
    font-size: 12px
    text-align: center
    font-weight: bold
    cursor: pointer
    &.current
      background: #ffa61a
      border-color: #ffa61a
      color: #fff
      cursor: default


/*----------------------------------------------------------
 PC
------------------------------------------------------------*/
@media screen and (min-width: $pcScreenMinWidth)
  @import "../../../_partial/pc/_playerList"
