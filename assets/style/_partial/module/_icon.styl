/*----------------------------------------------------------
 Icon
------------------------------------------------------------*/

.icon
  display: inline-block
  vertical-align: top
  background-repeat: no-repeat
  text-indent: -9999px


/* param
--------------------------------------------------*/

.iconParam
  @extend .icon
  width: 16px
  height: 16px
  background-image: url($pathImage + "stripe/icon_param.png")
  background-size: 200px 50px

.icon-paramS
  @extend .iconParam
  background-position: 0 0
