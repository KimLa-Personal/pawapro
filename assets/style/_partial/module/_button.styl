/*----------------------------------------------------------
 Button
------------------------------------------------------------*/

.btn
  display: inline-block
  margin-left: auto
  margin-right: auto
  border: none
  cursor: pointer

.btn-action
  @extend .btn
  background: #ffa61a
  color: #fff
  font-weight: bold

.btn-submit
  @extend .btn
  background: #c4c4c4
  color: #fff
  font-weight: bold

// 大きさ
._small
  padding: 3px 10px
  border-radius: 3px
  font-size: 12px

._large
  min-width: 68%
  padding: 10px 0
  border-radius: 5px
  font-size: 16px

// PC
@media screen and (min-width: $pcScreenMinWidth)
  ._large
    min-width: 180px
    padding: 10px 30px
