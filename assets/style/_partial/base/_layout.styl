/*----------------------------------------------------------
 page
------------------------------------------------------------*/

.page
  min-width: 320px
  padding-top: 50px


/*----------------------------------------------------------
 header
------------------------------------------------------------*/

.header
  position: relative
  z-index: 2

.header-heading
  position: fixed
  top: 0
  left: 0
  width: 100%
  padding: 10px
  background: rgba(255, 255, 255, 0.8)
  box-sizing: border-box

.header-heading-logo
  width: 145px

.header-heading-logo
  a, span
    display: block
    width: 100%
    img
      width: 100%
      height: auto


/* btnContentsNav
--------------------------------------------------*/

.header-heading-btnContentsNav
  position: absolute
  top: 14px
  right: 14px
  width: 26px
  height: 22px
  span, &:before, &:after
    content: ""
    position: absolute
    left: 0
    width: 100%
    height: 2px
    background: #d4ddee
    text-indent: -9999px
    span
      top: 0
  &:before
    top: 10px
  &:after
    top: 20px
  &.active
    span
      display: none
    &:before, &:after
      top: 10px
      left: 0
      height: 1px
    &:before
      transform: rotate(45deg)
    &:after
      transform: rotate(-45deg)


/*----------------------------------------------------------
 globalNav
------------------------------------------------------------*/

.globalNav
  border-bottom: 1px solid #fff
  background: #111

.globalNav-list
  display: flex
  li
    width: 25%
    border-left: 1px solid #fff
    &:first-child
      border-left-width: 0
    a, span
      display: block
      padding: 7px 0 5px
      font-size: 14px
      color: #fff
      text-align: center
      text-decoration: none
    &.current
      background: #555


/*----------------------------------------------------------
 main
------------------------------------------------------------*/

.main
  padding-bottom: 50px

.main-header
  border-bottom: 1px solid #ccc
  background: #fff

.main-header-topicPath
  display: none
  padding: 5px 0
  background: #eee

.main-header-topicPath-list
  li
    display: inline
    + li:before
      content: "ï¼ž"
      margin: 0 5px

.main-header-supplementary
  padding: 2px 10px 3px
  background: #eee
  font-size: 12px

.main-header-title
  padding: 30px 5px
  font-size: 18px
  text-align: center
  letter-spacing: 0.1em

.main-contents
  padding-top: 15px


